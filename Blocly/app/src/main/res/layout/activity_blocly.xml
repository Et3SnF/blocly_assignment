<?xml version="1.0" encoding="utf-8"?>

<!-- Surround the drawer into the recyclerview. DrawerLayout needs to surround every screen!-->

<android.support.v4.widget.DrawerLayout
    xmlns:android ="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl_activity_blocly"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This linear layout is part of the app drawer. We put any view that's in this within the
    drawer layout tags
     -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- This toolbar is capable of being used as an ActionBar b/c BloclyActivity extends
        from ActionvBarActivity. Toolbar is an independent ViewGroup we can place anywhere.
         We are capable of using ToolBar as an ActionBar in this case-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@color/action_bar_color"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_activity_blocly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!-- TextView for the Drawer -->

    <TextView
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:text="@string/drawer_message"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_gravity = "left"
        android:textColor="@color/white_87"
        android:background="@color/drawer_color"/>

</android.support.v4.widget.DrawerLayout>
