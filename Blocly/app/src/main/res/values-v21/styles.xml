<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material">

        <!-- Main theme colors -->

        <!--   your app's branding color (for the app bar) -->

        <item name="android:colorPrimary">@color/action_bar_color</item>

        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->

        <item name="android:colorPrimaryDark">@color/status_bar_color</item>

        <!--   theme UI controls like checkboxes and text fields -->

        <item name="android:colorAccent">@color/accent</item>

        <!-- Window Background -->

        <item name="android:windowBackground">@color/background_color</item>

    </style>

    <!-- Style for robotofont -->

    <style name="Headline">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Caption">

        <item name="android:textColor">@color/red_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Body1">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>

    </style>

</resources>