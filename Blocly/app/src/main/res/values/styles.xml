<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!-- Window Background -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Drawer Arrow Style - Colors for ActionBar Items -->

        <item name = "drawerArrowStyle">@style/DrawerArrow</item>

        <!-- AppCompat Colors -->

        <item name ="colorPrimary">@color/action_bar_color</item>
        <item name ="colorPrimaryDark">@color/status_bar_color</item>
        <item name ="colorAccent">@color/accent</item>

    </style>

    <!-- Style for Drawer Arrow Toggle -->
    <!-- The parent provides supplies color, thickness, barSize, and gapBetweenBars-->

    <style name = "DrawerArrow" parent = "Base.Widget.AppCompat.DrawerArrowToggle">

        <item name ="color">@color/red_50</item>
        <item name ="thickness">1dp</item>

        <!-- Triple bar adjustment -->

        <item name ="barSize">20dp</item>
        <item name ="gapBetweenBars">4dp</item>

        <!-- Arrow adjustments -->

        <item name ="topBottomBarArrowSize">15dp</item>
        <item name ="middleBarArrowSize">0dp</item>

        <!--Spin animation to go between menu to arrow or not -->

        <item name = "spinBars">false</item>

    </style>

    <!-- Style for roboto font -->

    <style name="Headline">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Caption">

        <item name="android:textColor">@color/red_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Body1">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>

    </style>

    <!-- Style for VISIT SITE link -->

    <style name = "Button">

        <item name = "android:textColor">@drawable/btn_text_drawable</item>
        <item name = "android:textSize">14sp</item>
        <item name = "android:textAllCaps">true</item>
        <item name = "robotoFont">Medium</item>

    </style>

</resources>