<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">

        <!-- Window Background -->
        <item name="android:windowBackground">@color/windowBackground</item>

    </style>

    <!-- Style for roboto font -->

    <style name="Headline">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">24sp</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Caption">

        <item name="android:textColor">@color/red_50</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="robotoFont">Regular</item>

    </style>

    <style name="Body1">

        <item name="android:textColor">@color/white_87</item>
        <item name="android:textSize">14sp</item>
        <item name="robotoFont">Regular</item>

    </style>

    <!-- Style for VISIT SITE link -->

    <style name = "Button">

        <item name = "android:textColor">@drawable/btn_text_drawable</item>
        <item name = "android:textSize">14sp</item>
        <item name = "android:textAllCaps">true</item>
        <item name = "robotoFont">Medium</item>

    </style>

</resources>