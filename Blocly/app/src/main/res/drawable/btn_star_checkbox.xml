<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Unchecked and pressed -->

    <item
        android:drawable="@drawable/btn_star_unchecked_pressed"
        android:state_checked="false"
        android:state_pressed="true"/>

    <!-- Checked and unpressed -->

    <item
        android:drawable="@drawable/btn_star_checked"
        android:state_checked="true"
        android:state_pressed="false"/>

    <!-- Checked and pressed -->

    <item
        android:drawable="@drawable/btn_star_checked_pressed"
        android:state_checked="true"
        android:state_pressed="true"/>

    <!-- Default state - Unchecked and Unpressed -->

    <item
        android:drawable="@drawable/btn_star_unchecked"/>

</selector>